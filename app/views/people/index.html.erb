<div ng-app="app">
  <div ng-controller="peopleCtrl" ng-init="setup()">

    <h4>Total number of people: {{ people.length }}</h4>
    <input ng-model="nameFilter">
    <div>
      <button ng-click="setOrderAttribute('name')">Order by name</button>
      <button ng-click="setOrderAttribute('bio')">Order by bio</button>
    </div>
    <div ng-repeat="person in people | filter: {name: nameFilter} | orderBy:orderAttribute:isOrderDescending">
      <h3 ng-click="toggleBio(person)">{{ person.name }}</h3>
      <p ng-class="{strike: person.bioVisible}">{{ person.bio }}</p>
      <a href="#" ng-click="deletePerson(person)">Delete</a>
    </div>
    <h2>Add a person</h2>
    <ul id="errors">
      <li ng-repeat="error in errors">{{ error }}</li>
    </ul>
    <div>
      Name: <input ng-model="newPersonName">
      Bio: <input ng-model="newPersonBio">
      <button ng-click="addPerson(newPersonName, newPersonBio)">Add person</button>
    </div>

  </div>
</div>

<div ng-app="app">
  <div ng-controller="peopleCtrl" ng-init="setup()">

    <h4>Total number of people: {{ people.length }}</h4>
    <div>
      <label>Filter name:</label>
      <input ng-model="nameFilter" list="names">

      <datalist id="names">
        <option ng-repeat="person in people">{{ person.name }}</option>
      </datalist>

    </div>
    <table border=1>
      <tr>
        <th ng-click="setOrderAttribute('name')">Name {{ getSortIcon('name') }}</th>
        <th ng-click="setOrderAttribute('bio')">Bio {{ getSortIcon('bio') }}</th>
      </tr>
      <tr ng-repeat="person in people | filter: {name: nameFilter} | orderBy:orderAttribute:isOrderDescending">
        <td>{{ person.name }}</td>
        <td>{{ person.bio }}</td>
      </tr>
    </table>

    <h2>Add a person</h2>
    <ul id="errors">
      <li ng-repeat="error in errors">{{ error }}</li>
    </ul>
    <div>
      Name: <input ng-model="newPersonName">
      Bio: <input ng-model="newPersonBio">
      <button ng-click="addPerson(newPersonName, newPersonBio)">Add person</button>
    </div>

  </div>
</div>
